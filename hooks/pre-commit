#!/bin/bash
# Pre-commit hook to run clippy before allowing commits
# This ensures code quality standards are met before committing

set -e

echo "ğŸ” Running clippy linter..."

# Run clippy with warnings as errors
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo ""
    echo "âŒ Clippy found issues. Please fix them before committing."
    echo "   Run: cargo clippy --all-targets --all-features -- -D warnings"
    exit 1
fi

echo "âœ… Clippy passed!"
exit 0
